            <script>
            function lastclass(){


                var guesser = document.getElementById("pass0").value;
                
                var player1 = document.getElementById("pass1").value;
                
                var player2 = document.getElementById("pass2").value;
                
                var player3 = document.getElementById("pass3").value;
                
                if(player1 == guesser){
                    document.write("Player 1 has won the game")
                }
        
               else if(player2 == guesser){
                    document.write("Player 2 has won the game")
                }
        
               else if(player3 == guesser){
                    document.write("Player 3 has won the game")
                }
                else{
                    document.write("Game Lost, Try Again")
                }
        
                console.log(typeof(guesser))
        
            }
